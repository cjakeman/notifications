{
  "$schema": "https://github.com/openrails/notifications/blob/f2717000c5d94da99513e9921530fdd10ea449fa/schema.json",
  "notificationList": [
    {
      "date": "{{release_date}}",
      "title": "Updates for Open Rails",
	    "updateMode": "stable",
	    "comment": "No special checks for the latest version",
      "prefixItemList": [
        {
		      "$type":"ORTS.Record, Menu",
          "label": "Latest version available",
          "value": "{{latest_version}}"
        },
        {
		      "$type":"ORTS.Record, Menu",
          "label": "Installed version",
          "value": "{{installed_version}}"
        },
        {
		      "$type":"ORTS.Record, Menu",
          "label": "Update mode",
          "value": "{{update_mode}}   (To change Update Mode, use Options > System.)"
        }
      ],
      "met": {
        "itemList": [
          {
            "$type":"ORTS.Heading, Menu",
            "label": "New version available"
          },
          {
            "$type":"ORTS.Link, Menu",
            "label": "What's new",
            "value": "Find out on-line what's new in this version.",
            "Url": "https://www.openrails.org/discover/latest_stable_version"
          },
          {
            "$type":"ORTS.Update, Menu",
            "label": "Install",
            "value": "Install the latest Stable version"
          }
        ],
        "checkIdList": [
          {
            "id": "not_updated"
          },
          {
            "id": "direct3d_10_0"            
          }
        ]
      }
    },
    {
      "date": "{{release_date}}",
      "title": "Updates for Open Rails",
      "updateMode": "testing",
      "comment": "No special checks for the latest version",
      "prefixitemList": [
        {
          "$type":"ORTS.Record, Menu",
          "value": "{{latest_version}}",
          "label": "Latest version available"
        },
        {
	      "$type":"ORTS.Record, Menu",
          "value": "{{installed_version}}",
          "label": "Installed version"
        },
	    {
	      "$type":"ORTS.Record, Menu",
          "value": "{{update_mode}}   (To change Update Mode, use Options > System.)",
          "label": "Update mode"
        }
      ],
      "met": {
        "itemList": [
          {
            "$type":"ORTS.Heading, Menu",
            "label": "New version available"
          },
          {
            "$type":"ORTS.Link, Menu",
            "value": "Find out on-line what's new in this version.",
            "Url": "https://www.openrails.org/download/changes/",
            "label": "What's new"
          },
          {
            "$type":"ORTS.Update, Menu",
            "value": "Install the latest Testing version",
            "label": "Install"
          }
        ],
        "checkIdList": [
          {
            "id": "not_updated"
          },
          {
            "id": "direct3d_10_0"
          }
        ]
      }
    },
	  {
      "date": "{{release_date}}",
      "title": "Updates for Open Rails",
	    "updateMode": "unstable",
	    "comment": "No special checks for the latest version",
      "prefixItemList": [
        {
          "$type":"ORTS.Record, Menu",
          "value": "{{latest_version}}",
          "label": "Latest version available"
        },
        {
		      "$type":"ORTS.Record, Menu",
          "value": "{{installed_version}}",
          "label": "Installed version"
        },
        {
	        "$type":"ORTS.Record, Menu",
          "value": "{{update_mode}}   (To change Update Mode, use Options > System.)",
          "label": "Update mode"
        }
      ],
      "met": {
        "itemList": [
          {
            "$type":"ORTS.Heading, Menu",
            "label": "New version available"
          },
          {
            "$type":"ORTS.Link, Menu",
            "value": "Find out on-line what's new in this version.",
            "Url": "https://james-ross.co.uk/projects/or",
            "label": "What's new"
          },
          {
            "$type":"ORTS.Update, Menu",
            "value": "Install the latest Unstable version",
            "label": "Install"
          }
        ],
        "checkIdList": [
          {
            "id": "not_updated"
          },
          {
            "id": "direct3d_10_0"
          }
        ]
      }
    }	
  ],
  "checkList": [
    {
      "id": "not_updated",
      "comment": "If latest_version == installed_version or update_mode == 'none', then up to date so exclude",
	    "anyOfList": [
        {
          "$type":"ORTS.Excludes, Menu",
          "allOfList" : [
            {
	            "$type":"ORTS.Contains, Menu",
              "property": "{{installed_version}}",
	            "value": "{{latest_version}}"
            }
          ]
        },
		    {		
          "$type":"ORTS.Excludes, Menu",
          "allOfList" : [
            {
	            "$type":"ORTS.Contains, Menu",
              "property": "{{update_mode}}",
	            "value": "none"
            }
          ]
        }
      ],		
      "unmetItemList": [
        {
	        "$type":"ORTS.Link, Menu",
          "value": "Find out on-line what was new in your installed version.",
          "url": "https://www.openrails.org/discover/latest_stable_version",
          "label": "What's new"
        }
      ]
    },
    {
      "id": "direct3d_10_0",
      "comment": "Windows 7 onwards have software but may lack hardware for Direct3D 10.0",
      "anyOfList": [
        {
          "$type":"ORTS.Includes, Menu",
           "allOfList": [
              {
               "$type":"ORTS.Contains, Menu",
                "property": "{{direct3d}}",
                "value": "10_0"
              }
            ]
          }
       ],
       "unmetItemList": [
        {
	        "$type":"ORTS.Heading, Menu",
          "label": "Install not available.",
          "color": "red"
        },
        {
	        "$type":"ORTS.Text, Menu",
          "label": "This version cannot be installed on your system until the graphics card has been upgraded."
        },
        {
          "$type":"ORTS.Link, Menu",
          "value": "Find out on-line about graphics card needed.",
          "url": "https://www.openrails.org/learn/faq/#hardware_requirements",
          "label": "Graphics card"
        }
      ]
    }	
  ]
}