{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema for notifications/menu",
  "type": "object",
  "$defs": {
	 "item": {
       "type": "object",
       "properties": {
          "$type": {
            "type": "string"
          },
          "value": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "indent": {
            "type": "number"
          },
          "color": {
            "type": "string"
          }
	    },
		"required": [
          "$type",
          "value",
          "label"
        ]
	  }
    },
  "properties": {
    "$schema": {
      "type": "string"
    },
    "notificationList": {
      "type": "array",
      "item": { 
        "type": "object",
        "properties": {
          "date": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "updateMode": {
            "type": "string"
          },
          "comment": {
            "type": "string"
          },
          "prefixItemList": {
            "type": "array",
            "item": {
              "$ref": "#/$defs/item"
            }
          },
          "met": {
            "type": "object",
            "properties": {
              "itemList": {
                "type": "array",
                "item": {
                  "$ref": "#/$defs/item"
                }
              },
              "checkIdList": {
                "type": "array",
                "checkId": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "id"
                  ]
                }
              }
            },
            "required": [
              "itemList",
              "checkIdList"
            ]
          },
          "suffixItemList": {
            "type": "array",
            "item": {
              "$ref": "#/$defs/item"
            }
          }
        },
        "required": [
          "date",
          "title",
          "met"
        ]
      }
    },
    "checkList": {
      "type": "array",
      "check": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "comment": {
            "type": "string"
          },
          "anyOfList": {
            "type": "array",
            "anyOf": {
              "type": "object",
              "properties": {
                "$type": {
                  "type": "string"
                },
                "allOfList": {
                  "type": "array",
                  "criteria": {
                    "type": "object",
                    "properties": {
                      "$type": {
                        "type": "string"
                      },
                      "property": {
                        "type": "string"
                      },
                      "value": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "$type",
                      "property",
                      "value"
                    ]
                  }
                }
              },
              "required": [
                "$type",
                "allOf"
              ]
            }
          },
          "unmetItemList": {
            "type": "array",
            "itemList": {
              "item": {
                "$ref": "#/$defs/item"
              }
            }
          }
        },
        "required": [
          "id",
          "anyOfList"
        ]
      }
    }
  },
  "required": [
    "$schema",
    "notificationList",
    "checkList"
  ]
}